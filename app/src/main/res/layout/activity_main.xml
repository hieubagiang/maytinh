<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_mayTinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/m_y_t_nh"
        android:textSize="40sp"
        />

    <EditText
        android:id="@+id/txt_soA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:hint="@string/nh_p_s_a"
        android:text=""
        android:background="@drawable/botron"

        />
    <EditText
        android:id="@+id/txt_soB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp"
        android:inputType="number"
        android:hint="@string/nh_p_s_b"
        android:text=""
        android:background="@drawable/botron"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_cong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="20sp"
            android:background="@drawable/botron"
            />

        <Button
            android:id="@+id/btn_tru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="20sp"
            android:background="@drawable/botron"
            />

        <Button
            android:id="@+id/btn_nhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_weight="1"
            android:text="x"
            android:background="@drawable/botron"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/btn_chia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="15sp"
            android:layout_weight="1"
            android:text="/"
            android:background="@drawable/botron"
            android:textSize="20sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        >
        <TextView
            android:id="@+id/txt_result"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:text="Kết quả"
            android:textSize="25sp"
            android:background="@drawable/botron"
            android:layout_weight="4"
            />

        <ImageButton
            android:id="@+id/img_send"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="15sp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@drawable/ic_send_black_24dp" />

        <ImageButton
            android:id="@+id/img_exit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="15sp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@drawable/ic_exit_to_app_black_24dp" />

    </LinearLayout>

</LinearLayout>